        <Description Translatable="1">Module for the delete action.</Description>
        <Group>CustomerUserCheckAndDelete</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">Kernel::System::PerlServices::CustomerUserDelete</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerUserCheckAndDelete::Check###001-NoTickets" Required="0" Valid="1">
        <Description Translatable="1">Check if customer user has no tickets.</Description>
        <Group>CustomerUserCheckAndDelete</Group>
        <SubGroup>Checks</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::PerlServices::CustomerUserChecks::NoTicket</Item>
                <Item Key="Debug">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
